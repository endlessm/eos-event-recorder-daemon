//
// Allow the metrics user to do certain actions without
// being interrupted by password dialogs

polkit.addRule(function(action, subject) {
    if (subject.user !== 'metrics')
        return undefined;

    if (action.id === 'com.endlessm.MetricsSystemHelper.ResetTrackingId')
        return 'yes';

    return undefined;
});
